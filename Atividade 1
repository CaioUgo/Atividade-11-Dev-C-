#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
int main() {

	char aluno[5][10];
	int contador, nomes, contador1;
	float notas[5][10], media;
	float totalnotas = 0;
	
	for (contador = 1; contador < 6; contador++ ){
		totalnotas = 0;	
			printf("aluno : ");
			scanf("%s/n",aluno[contador]);
			
				for (contador1 = 1; contador1 < 5; contador1++) {
					printf("nota %i: ",contador1 );
					scanf("%f", &notas[contador1][contador]);
					totalnotas += notas[contador1][contador];
					
						}
					media = totalnotas / 4;
					printf("total de notas : %f\n", totalnotas);
					printf("media das notas : %f", media);
						
	printf("\n");	
		}
	
		
	
		
}
